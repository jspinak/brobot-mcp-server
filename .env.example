# Brobot MCP Server Configuration Example
# Copy this file to .env and adjust values as needed

# Server Configuration
MCP_HOST=0.0.0.0
MCP_PORT=8000
MCP_RELOAD=true
MCP_LOG_LEVEL=info

# Brobot CLI Configuration
# Path to the Brobot CLI JAR file
BROBOT_CLI_JAR=brobot-cli/build/libs/brobot-cli.jar

# Java executable (default: java)
JAVA_EXECUTABLE=java

# CLI timeout in seconds
CLI_TIMEOUT=30.0

# Use mock data instead of real CLI (set to false when CLI is ready)
USE_MOCK_DATA=true

# API Configuration
API_VERSION=v1